<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | RARO</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <h1 class="logo">RARO</h1>
                <p class="tagline">Coleção 2025.</p>
                <nav class="nav">
                    <a href="/" class="nav-link">← Voltar à Coleção</a>
                    <a href="/logout" class="nav-link">Sair</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <div class="product-detail">
                <div class="product-detail-image">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="detail-product-photo">
                    <div class="detail-overlay">
                        <div class="scarcity-badge large">
                            <span class="scarcity-number"><%= product.quantity %></span>
                            <span class="scarcity-text"><%= product.quantity === 1 ? 'peça restante' : 'peças restantes' %></span>
                        </div>
                    </div>
                </div>
                
                <div class="product-detail-info">
                    <div class="product-breadcrumb">
                        <a href="/" class="breadcrumb-link">Coleção</a>
                        <span class="breadcrumb-separator">→</span>
                        <span class="breadcrumb-current"><%= product.category %></span>
                    </div>
                    
                    <div class="product-origin-badge"><%= product.origin.split(', ')[1] %></div>
                    <h1 class="product-detail-title"><%= product.name %></h1>
                    <p class="product-detail-origin">Exclusivo de <%= product.origin %></p>
                    
                    <div class="product-detail-story">
                        <h3>História da Peça</h3>
                        <p><%= product.story %></p>
                    </div>
                    
                    <div class="product-detail-specs">
                        <div class="spec-item">
                            <span class="spec-label">Categoria:</span>
                            <span class="spec-value"><%= product.category %></span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Origem:</span>
                            <span class="spec-value"><%= product.origin %></span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Disponibilidade:</span>
                            <span class="spec-value">Peça única</span>
                        </div>
                    </div>
                    
                    <div class="product-detail-price">
                        <span class="price-label">Valor exclusivo</span>
                        <span class="price-value">R$ <%= product.price.toLocaleString('pt-BR') %></span>
                    </div>
                    
                    <div class="product-detail-timer" data-end-time="<%= product.endTime %>">
                        <span class="timer-label">Oferta expira em:</span>
                        <span class="timer-value"></span>
                    </div>
                    
                    <div class="product-detail-actions">
                        <button class="acquire-button" onclick="acquireProduct(<%= product.id %>)">
                            Adquirir Peça
                        </button>
                        <button class="inquiry-button" onclick="makeInquiry(<%= product.id %>)">
                            Solicitar Informações
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p class="footer-text"> 2025 RARO.</p>
        </div>
    </footer>

    <!-- Purchase Success Modal -->
    <div id="purchaseModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Parabéns!</h2>
            </div>
            <div class="modal-body">
                <p id="purchaseMessage"></p>
            </div>
            <div class="modal-footer">
                <button class="modal-button" onclick="window.location.href='/'">Voltar à Coleção</button>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>
