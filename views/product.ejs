<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> | RARO</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <h1 class="logo">RARO</h1>
                <p class="tagline">Coleção 2025.</p>
                <nav class="nav">
                    <a href="/" class="nav-link">← Voltar à Coleção</a>
                    <a href="/logout" class="nav-link">Sair</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <div class="product-detail">
                <div class="product-detail-image">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="detail-product-photo">
                    <div class="detail-overlay">
                        <div class="scarcity-badge large">
                            <span class="scarcity-number"><%= product.quantity %></span>
                            <span class="scarcity-text"><%= product.quantity === 1 ? 'peça restante' : 'peças restantes' %></span>
                        </div>
                    </div>
                </div>
                
                <div class="product-detail-info">
                    <div class="product-breadcrumb">
                        <a href="/" class="breadcrumb-link">Coleção</a>
                        <span class="breadcrumb-separator">→</span>
                        <span class="breadcrumb-current"><%= product.category %></span>
                    </div>
                    
                    <div class="product-origin-badge"><%= product.origin.split(', ')[1] %></div>
                    <h1 class="product-detail-title"><%= product.name %></h1>
                    <p class="product-detail-origin">Exclusivo de <%= product.origin %></p>
                    
                    <div class="product-detail-story">
                        <h3>História da Peça</h3>
                        <p><%= product.story %></p>
                    </div>
                    
                    <div class="product-detail-specs">
                        <div class="spec-item">
                            <span class="spec-label">Categoria:</span>
                            <span class="spec-value"><%= product.category %></span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Origem:</span>
                            <span class="spec-value"><%= product.origin %></span>
                        </div>
                        <div class="spec-item">
                            <span class="spec-label">Disponibilidade:</span>
                            <span class="spec-value">Peça única</span>
                        </div>
                    </div>
                    
                    <div class="product-detail-price">
                        <span class="price-label">Valor exclusivo</span>
                        <span class="price-value">R$ <%= product.price.toLocaleString('pt-BR') %></span>
                    </div>
                    
                    <div class="product-detail-timer" data-end-time="<%= product.endTime %>">
                        <span class="timer-label">Oferta expira em:</span>
                        <span class="timer-value"></span>
                    </div>
                    
                    <div class="product-detail-actions">
                        <button class="acquire-button" data-product-id="<%= product.id %>" onclick="openAcquireModal(this.dataset.productId)">
                            Adquirir Peça
                        </button>
                        <button class="inquiry-button" data-product-id="<%= product.id %>" onclick="openInquiryModal(this.dataset.productId)">
                            Solicitar Informações
                        </button>
                        <button class="wishlist-button" data-product-id="<%= product.id %>" onclick="toggleWishlist(this.dataset.productId)">
                            <span class="wishlist-icon">♡</span>
                            Adicionar aos Favoritos
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Luxury Modals -->
    <div id="acquireModal" class="luxury-modal">
        <div class="modal-overlay" onclick="closeLuxuryModal('acquireModal')"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Processo de Aquisição VIP</h2>
                <button class="modal-close" onclick="closeLuxuryModal('acquireModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="acquisition-steps">
                    <div class="step active">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h3>Verificação de Elegibilidade</h3>
                            <p>Confirmação de capacidade financeira e perfil de colecionador</p>
                        </div>
                    </div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h3>Consulta Personalizada</h3>
                            <p>Reunião privada com nosso especialista em peças raras</p>
                        </div>
                    </div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h3>Autenticação & Entrega</h3>
                            <p>Certificado de autenticidade e entrega white-glove</p>
                        </div>
                    </div>
                </div>
                <form class="vip-form">
                    <div class="form-group">
                        <label>Nome Completo</label>
                        <input type="text" required placeholder="Seu nome completo">
                    </div>
                    <div class="form-group">
                        <label>Email Privado</label>
                        <input type="email" required placeholder="seu@email.com">
                    </div>
                    <div class="form-group">
                        <label>Telefone (WhatsApp)</label>
                        <input type="tel" required placeholder="+55 (11) 99999-9999">
                    </div>
                    <div class="form-group">
                        <label>Patrimônio Líquido Estimado</label>
                        <select required>
                            <option value="">Selecione</option>
                            <option value="1-5M">R$ 1M - 5M</option>
                            <option value="5-20M">R$ 5M - 20M</option>
                            <option value="20-100M">R$ 20M - 100M</option>
                            <option value="100M+">R$ 100M+</option>
                        </select>
                    </div>
                    <button type="submit" class="vip-submit">Iniciar Processo VIP</button>
                </form>
            </div>
        </div>
    </div>

    <div id="inquiryModal" class="luxury-modal">
        <div class="modal-overlay" onclick="closeLuxuryModal('inquiryModal')"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Consultoria Exclusiva</h2>
                <button class="modal-close" onclick="closeLuxuryModal('inquiryModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="concierge-info">
                    <div class="concierge-avatar">
                        <div class="avatar-placeholder">RC</div>
                    </div>
                    <div class="concierge-details">
                        <h3>Rafael Cavalcanti</h3>
                        <p>Especialista Senior em Peças Raras</p>
                        <div class="availability">
                            <span class="status-dot"></span>
                            Disponível agora
                        </div>
                    </div>
                </div>
                <form class="inquiry-form">
                    <div class="form-group">
                        <label>Como prefere ser contactado?</label>
                        <div class="contact-options">
                            <label class="radio-option">
                                <input type="radio" name="contact" value="whatsapp">
                                <span>WhatsApp</span>
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="contact" value="call">
                                <span>Ligação</span>
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="contact" value="email">
                                <span>Email</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Sua pergunta sobre esta peça</label>
                        <textarea placeholder="Descreva suas dúvidas ou interesse específico..."></textarea>
                    </div>
                    <div class="form-group">
                        <label>Telefone/WhatsApp</label>
                        <input type="tel" required placeholder="+55 (11) 99999-9999">
                    </div>
                    <button type="submit" class="inquiry-submit">Solicitar Consultoria</button>
                </form>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p class="footer-text"> 2025 RARO.</p>
        </div>
    </footer>

    <script src="/js/timer.js"></script>
    <script src="/js/luxury.js"></script>

    <div id="purchaseModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Parabéns!</h2>
            </div>
            <div class="modal-body">
                <p id="purchaseMessage"></p>
            </div>
            <div class="modal-footer">
                <button class="modal-button" onclick="window.location.href='/'">Voltar à Coleção</button>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>
